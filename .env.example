# Environment
NODE_ENV=production # Changed from 'test' to 'production' for real production
ENABLE_CSRF=true
PORT=5000

# Google Map Api key
GOOGLE_MAP_API_KEY=googlemap api key for customers, carriers, sellers, admin

# MySQL Configuration
DB_HOST=localhost
DB_USER=root
DB_NAME=store_db
DB_PASSWORD=your_mysql_password

# JWT Authentication
JWT_SECRET=daniel
JWT_EXPIRATION_MINUTES=15
JWT_REFRESH_SECRET=DANIEL

# Session Secret
SESSION_SECRET=your_session_secret # Add a comment to use a strong secret

# Mailtrap Configuration (for testing)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_password
FROM_EMAIL=your_from_email
TO_EMAIL=your_to_email

